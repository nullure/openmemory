root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,mjs}]
indent_size = 2

[*.{py}]
indent_size = 4
max_line_length = 88

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{toml}]
indent_size = 2

[*.{sh}]
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[Makefile]
indent_style = tab

[package.json]
indent_size = 2

[*.sql]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.xml]
indent_size = 2